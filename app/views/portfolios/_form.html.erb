<%= form_for(portfolio_item) do |form| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label class="btn-primary">
        Upload main image file
        <%= form.file_field :main_image, style: 'display: none;' %>
      </label>
    </div>

    <div class="form-group">
      <label class="btn-primary">
        Upload thumb image file
       <%= form.file_field :thumb_image, style: 'display: none;' %>
     </label>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', size: "10x14" %>
    </div>
  </div>
</div>

<hr>

<div class="col-md-12">
  <h2>Technologies Used:</h2>

  <div>
    <%= form.fields_for :technologies do |tech| %>
    <div class="form-group">
      <%= tech.label :name %>
      <%= tech.text_field :name, class: 'form-control' %>
    </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
</div>